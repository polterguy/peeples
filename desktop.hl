/*
 * Desktop widget.
 */
container
  element:a
  class:desktop-app shaded rounded air-inner
  title:Manage users
  oninit

    /*
     * Verifying user is logged in as root, and if not, deleting widget altogether, 
     * and returning early.
     */
    whoami
    if:x:/@whoami/*/role?value
      !=:root

      /*
       * User is not logged in as root, simply deleting entire icon.
       */
      delete-widget:x:/../*/_event?value
      return

    /*
     * Getting URL to point correctly.
     */
    p5.io.unroll-path:@PEEPLES/
    split:x:/-?value
      =:/
    set-widget-property:x:/../*/_event?value
      href:/{0}
        :x:/@split/0/-?name

  widgets
    span
      class:desktop-app-name
      widgets
        literal
          element:span
          class:icon-users desktop-app-icon
        span
          style:"position:absolute;top:5px;right:5px;font-size:.7rem;"
          innerValue:Users
